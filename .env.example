# Telegram Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
# Get chat ID by messaging your bot and calling getUpdates
TELEGRAM_CHAT_ID=123456789

# Check Intervals (seconds)
CHECK_INTERVAL_SERVICES=60
CHECK_INTERVAL_ENDPOINTS=300
CHECK_INTERVAL_RESOURCES=300
CHECK_INTERVAL_SSL=86400
CHECK_INTERVAL_DISCOVERY=300

# Alert Thresholds
DISK_THRESHOLD_PERCENT=85
RAM_THRESHOLD_PERCENT=90
CPU_THRESHOLD_PERCENT=95

# Alert Behavior
ALERT_COOLDOWN_MINUTES=30
RECOVERY_NOTIFY=true
FLAPPING_THRESHOLD=3
FLAPPING_WINDOW_MINUTES=10

# Dashboard
DASHBOARD_PORT=3100
DASHBOARD_ENABLED=true

# Dashboard Authentication (optional - leave empty to disable)
# Set username and password for Basic Auth
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-secure-password-here

# API key for restart functionality (optional - leave empty to disable)
# Generate a secure random key: openssl rand -hex 32
RESTART_API_KEY=your-secure-api-key-here

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
ANOMALY_MULTIPLIER=3.0
ANOMALY_SAMPLE_SIZE=20

# Logging
LOG_LEVEL=info
